<div class="row col-md-offset-1">
<h1>Your favorite spots!</h1>

<table class="table table-hover table-striped">
  <thead>
    <tr>
      <th><big>Spot</big></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% current_user.favorites.each do |favorite| %>
	      <tr>
	      	
	        <td></p><big><%= favorite.location.name %></big></p></td>
			
	        <td><%= link_to favorite, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" do %>
	        	<span class = "glyphicon glyphicon-trash"></span>
	        </td>
	        <% end %>
	      </tr>
    <% end %>
  </tbody>
</table>

<br>


</div>
