<div class="container">
	<div class="row">
		<div id="map-outer" class="col-md-12">
			<div class="col-md-6 col-md-offset-3">
				<table class="table table-striped">
					<thead>
						<tr>
							<th><font size="5"><strong>Your favorite spots!</strong></font></th>
						</tr>
					</thead>

					<tbody>
						<% current_user.favorites.includes(:location).each do |favorite| %>
						<tr>

							<td><big><%= favorite.location.name %></big></td>
							<td><%= link_to favorite, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" do %> <font size="6"><span class="fa fa-trash fa-spin"></span></font></td>
							<% end %>
						</tr>
						<% end %>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>
