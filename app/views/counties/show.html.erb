<p id="notice">
	<%= notice %>
</p>

<p>
	<strong>Name:</strong>
	<%= @county.name %>
	
	<table class="table table-hover table-striped">
		<thead>
			<tr>
				<th>Name</th>
				<th colspan="3"></th>
			</tr>
		</thead>

		<tbody>
			
			<% Location.find_each do |location| %>
				<% if @county == location.county %>
				<tr>
					<td><%= link_to location.name, Location.find(location.id) %></td>
				</tr>
				<% end %>
			<% end %>
		
		</tbody>
	</table>
</p>

<%= link_to 'Back', counties_path %>
