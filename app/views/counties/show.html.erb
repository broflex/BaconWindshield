<div class="row">
	<div class="col-md-4 col-md-offset-2">
		<p id="notice">
			<%= notice %>
		</p>

		<p>
			<table class="table table-hover table-striped">
				<thead>
					<tr>
						<th><%= @county.name %> Forecast</th>
						<th colspan="3"></th>
					</tr>
				</thead>

				<tbody>

					<% Location.find_each do |location| %>
					<% if @county == location.county %>
					<tr>
						<td><%= link_to location.name, Location.find(location.id) %>
						<div align="center">
							<canvas class="spot_forecast"
							id="1" data-location=<%= location.id%> data-duration="day" width="496" height="94"></canvas>
						</div></td>
						<td> </br>
						<div align="center">
							<canvas class="spot_forecast"
							id="2" data-location=<%= location.id%> data-duration="week" width="496" height="94"></canvas>
						</div></td>
					</tr>
					<% end %>
					<% end %>

				</tbody>
			</table>
		</p>

		<%= link_to 'Back', counties_path %>
	</div>
</div>